---
interface Props {
  topics: string[];
}

const { topics } = Astro.props;
---

<section class="bg-secondary/50 py-4 my-8">
  <div class="container">
    <div class="flex items-center space-x-4 overflow-x-auto">
      <span class="text-accent font-medium whitespace-nowrap">Trending:</span>
      {topics.map(topic => (
        <a 
          href={`/search?q=${encodeURIComponent(topic)}`}
          class="text-gray-400 hover:text-accent whitespace-nowrap"
        >
          #{topic}
        </a>
      ))}
    </div>
  </div>
</section>