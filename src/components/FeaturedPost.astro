---
interface Props {
  post: {
    title: string;
    excerpt: string;
    image: string;
    category: string;
    date: string;
  };
  featured?: boolean;
}

const { post, featured = false } = Astro.props;
---

<article class="relative group overflow-hidden rounded-xl">
  <div class="relative aspect-[16/9]">
    <img 
      src={post.image} 
      alt={post.title}
      class="absolute inset-0 w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/50 to-transparent"></div>
  </div>
  
  <div class="absolute bottom-0 left-0 right-0 p-6">
    <span class="inline-block px-3 py-1 rounded-full bg-accent/20 text-accent text-sm font-medium mb-3">
      {post.category}
    </span>
    <h3 class={`font-bold mb-2 ${featured ? 'text-3xl' : 'text-xl'}`}>
      <a href="#" class="hover:text-accent">
        {post.title}
      </a>
    </h3>
    <p class="text-gray-300 text-sm mb-3 line-clamp-2">{post.excerpt}</p>
    <time datetime={post.date} class="text-sm text-gray-400">
      {new Date(post.date).toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      })}
    </time>
  </div>
</article>