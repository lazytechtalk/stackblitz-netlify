---
import MobileMenu from './MobileMenu.astro';
import NavLink from './NavLink.astro';
import SocialLinks from './SocialLinks.astro';

const navItems = [
  { label: 'Reviews', href: '/reviews', subItems: [
    { label: 'Smartphones', href: '/reviews/smartphones' },
    { label: 'Laptops', href: '/reviews/laptops' },
    { label: 'Wearables', href: '/reviews/wearables' }
  ]},
  { label: 'News', href: '/news', subItems: [
    { label: 'Latest', href: '/news/latest' },
    { label: 'Launches', href: '/news/launches' },
    { label: 'Updates', href: '/news/updates' }
  ]},
  { label: 'How-To', href: '/tutorials', subItems: [
    { label: 'Guides', href: '/tutorials/guides' },
    { label: 'Tips & Tricks', href: '/tutorials/tips' },
    { label: 'Troubleshooting', href: '/tutorials/troubleshooting' }
  ]},
  { label: 'Videos', href: '/videos' },
];
---

<header class="sticky top-0 z-50 bg-secondary/95 backdrop-blur-sm border-b border-gray-800">
  <div class="container">
    <!-- Top bar with social links and search -->
    <div class="flex items-center justify-between py-2 border-b border-gray-800">
      <SocialLinks />
      <button class="text-gray-400 hover:text-accent">
        <span class="sr-only">Search</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </button>
    </div>
    
    <!-- Main navigation -->
    <div class="flex items-center justify-between py-4">
      <a href="/" class="text-2xl font-heading font-bold text-accent">
        Lazy Tech Talk
      </a>
      
      <nav class="hidden md:flex items-center space-x-8">
        {navItems.map(item => (
          <NavLink item={item} />
        ))}
      </nav>
      
      <MobileMenu navItems={navItems} />
    </div>
  </div>
</header>