---
interface Props {
  posts: Array<{
    title: string;
    excerpt: string;
    image: string;
    category: string;
    date: string;
  }>;
}

const { posts } = Astro.props;
---

<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
  {posts.map(post => (
    <article class="card">
      <div class="relative aspect-video mb-4">
        <img 
          src={post.image} 
          alt={post.title}
          class="absolute inset-0 w-full h-full object-cover rounded-lg"
        />
      </div>
      <span class="text-accent text-sm font-medium">{post.category}</span>
      <h3 class="text-xl font-bold mt-2 mb-3">
        <a href="#" class="hover:text-accent">
          {post.title}
        </a>
      </h3>
      <p class="text-gray-400 text-sm mb-4">{post.excerpt}</p>
      <time datetime={post.date} class="text-sm text-gray-400">
        {new Date(post.date).toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })}
      </time>
    </article>
  ))}
</div>